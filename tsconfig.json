{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "design-components",
  "include": ["src/index.ts", "src/index.d.ts"],
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "target": "es5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "strict": true,
    "jsx": "react-jsx"
  }
}
